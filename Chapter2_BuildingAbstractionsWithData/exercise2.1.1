#lang sicp
(define (make-rat n d)
  (cond ((= d 0) (error "denominator cannot be 0."))
        ((= n 0) (cons 0 1))
        ((> d 0)
         (let ((g (gcd n d)))
           (cons (/ n g) (/ d g))))
        ((< d 0)
         (make-rat (- n) (- d)))))
(make-rat 1 2)
(make-rat -1 2)
(make-rat 1 -2)
(make-rat -1 -2)
(make-rat 0 2)
(make-rat 1 0)