(define (make-segment xp yp)
  (cons xp yp))
(define (start-segment line)
  (car line))
(define (end-segment line)
  (cdr line))
(define (make-point x y)
  (cons x y))
(define (x-point p)
  (car p))
(define (y-point p)
  (cdr p))
(define (midpoint line)
