#lang sicp
(define (average a b c)
  (/ (+ a b c) 3))
(define dx 0.00001)
(define (smooth f)
  (lambda (x) (average
               (f (- x dx)) (f x) (f (+ x dx)))))

(define (repeated f n)
  (define (iter f k g)
    (if (= k n)
        g
        (iter f (+ k 1)
              (lambda (x) (f (g x))))))
  (iter f 1 f))
(define (n-flod-smooth f n)
  (repeated smooth n))